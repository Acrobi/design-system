{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "src/index.ts",
    "src/components/ui/index.ts",
    "src/lib/index.ts",
    "src/types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "pages",
    ".next",
    "**/*.test.*",
    "**/*.spec.*",
    "**/component-editor.tsx",
    "**/ui/**",
    "lib/theme-utils.ts",
    "src/pages/**",
    "src/lib/theme-utils.ts"
  ]
}